<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Store</display-name>

  <servlet>
  	<servlet-name>welcome</servlet-name>
  	<servlet-class>wb.store.WelcomeFormProcessor</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>welcome</servlet-name>
  	<url-pattern>/welcomeForm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>addItem</servlet-name>
  	<servlet-class>wb.store.admin.AddItem</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>addItem</servlet-name>
  	<url-pattern>/addItem</url-pattern>
  </servlet-mapping>
  
  <resource-ref>
	<description>MySQL Datasource</description>
	<res-ref-name>jdbc/store</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
  </resource-ref>
</web-app>